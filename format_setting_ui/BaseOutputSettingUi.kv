<BaseOutputSettingUi>:
    tf_book_title: tf_book_title
    tf_book_author: tf_book_author
    tf_book_series: tf_book_series
    tf_book_series_index: tf_book_series_index
    tf_book_tags: tf_book_tags
    tf_book_language: tf_book_language
    MDLabel:
        adaptive_height: True
        text: "Universal settings:"
    MDTextField:
        id: tf_book_title
        hint_text: "Book title:"
    MDTextField:
        id: tf_book_author
        hint_text: "Book author:"
    MDTextField:
        id: tf_book_series
        hint_text: "Book series:"
        helper_text: "Set the series this e-book belongs to."
        helper_text_mode: "on_focus"
    MDTextField:
        id: tf_book_series_index
        hint_text: "Book series index:"
        helper_text: "Set the index of the book in this series."
        helper_text_mode: "on_focus"
    MDTextField:
        id: tf_book_tags
        hint_text: "Book tags:"
        helper_text: "Set the tags for the book. Should be a comma separated list."
        helper_text_mode: "on_focus"
    MDTextField:
        id: tf_book_language
        hint_text: "Book language:"
    MDLabel:
        adaptive_height: True
        text: "Format settings:"