<AboutScreen>:
    toolbar: toolbar

    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: toolbar
            title: "Ebook Converter"
            left_action_items: [["arrow-left", lambda x: root.on_leave_button_clicked()]]
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(24)
                spacing: dp(15)
                adaptive_height: True
                MDLabel:
                    text: "Ebook Converter"
                    adaptive_height: True
                MDLabel:
                    text: "An ebook converter based on calibre."
                    adaptive_height: True
                MDLabel:
                    text: "Developer: NekoGirlSAIKOU"
                    adaptive_height: True
                MDLabel:
                    text: "Licenses:"
                    adaptive_height: True
                MDList:
                    ThreeLineListItem:
                        text: 'Ebook Converter'
                        secondary_text: 'https://github.com/NekoGirlSAIKOU/EbookConverter'
                        tertiary_text: 'GPL-3.0 License'
                        on_release:
                            root.open_url('https://github.com/NekoGirlSAIKOU/EbookConverter/blob/master/LICENSE')
                    TwoLineListItem:
                        text: 'kivy'
                        secondary_text: 'MIT License'
                        on_release:
                            root.open_url('https://github.com/kivy/kivy/blob/master/LICENSE')
                    TwoLineListItem:
                        text: 'kivymd'
                        secondary_text: 'MIT License'
                        on_release:
                            root.open_url('https://github.com/kivymd/KivyMD/blob/master/LICENSE')
                    TwoLineListItem:
                        text: 'plyer'
                        secondary_text: 'MIT License'
                        on_release:
                            root.open_url('https://github.com/kivy/plyer/blob/master/LICENSE')
                    TwoLineListItem:
                        text: 'calibre'
                        secondary_text: 'GPL-3.0 License'
                        on_release:
                            root.open_url('https://github.com/kovidgoyal/calibre/blob/master/LICENSE')
                    TwoLineListItem:
                        text: 'ebook-converter'
                        secondary_text: 'GPL-3.0 License'
                        on_release:
                            root.open_url('https://github.com/gryf/ebook-converter/blob/master/LICENSE')
                    TwoLineListItem:
                        text: 'buildozer'
                        secondary_text: 'MIT License'
                        on_release:
                            root.open_url('https://github.com/kivy/buildozer/blob/master/LICENSE')
                    TwoLineListItem:
